@model IEnumerable<MixingWebFormsMVC.Models.Requerimiento>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Projects</title>
</head>
<body>



    <main class="content">
        <div class="container p-0">

            <h1 class="h3 mb-3">Proyectos asignados</h1>

            <div class="row">
                <div class="col-12 col-lg-6 col-xl-3">
                    <div class="card card-border-primary">
                        <div class="card-header">

                            <h5 class="card-title">Sin empezar</h5>
                            <h6 class="card-subtitle text-muted">Nam pretium turpis et arcu. Duis arcu tortor.</h6>
                        </div>
                        <div class="card-body p-3" style="overflow-y:scroll; height:400px;">


                            @foreach (var item in Model)
                            {

                                <div class="card mb-3 bg-light">
                                    <div class="card-body p-3">
                                        <div class="float-right mr-n2">
                                            <label class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" checked="">
                                                <span class="custom-control-label"></span>
                                            </label>
                                        </div>
                                        <p>@Html.DisplayFor(modelItem => item.NombreRequerimiento)</p>
                                        <div class="float-right mt-n1">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar6.png" width="32" height="32" class="rounded-circle" alt="Avatar">
                                        </div>
                                        <a class="btn btn-outline-primary btn-sm" href="#">View</a>
                                    </div>
                                </div>

                            }



                        </div>
                    </div>
                </div>

            </div>

        </div>
    </main>


    <script>
        let bellIcon = '<i class="far fa-bell"></i>';

        let ul = document.getElementById('menuBar');
        let titleLabel = document.getElementById('userLoggedText');
        titleLabel.innerHTML = 'Programador';

        let li = document.createElement('li');
        li.className = 'view overlay';


         let icon = document.createElement('i');
        icon.className = 'far fa-bell';

        let a = document.createElement('a');
        a.className = 'nav-link';
        a.href = '~/Programmer/Projects';
        a.appendChild(icon);
        
  


        li.appendChild(a);

        ul.appendChild(li);
    </script>


</body>
</html>
